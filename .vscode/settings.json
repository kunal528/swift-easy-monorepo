{
    "solidity.packageDefaultDependenciesContractsDirectory": "apps/swiftx-contracts/src",
    "solidity.packageDefaultDependenciesDirectory": "apps/swiftx-contracts/lib",
    "editor.formatOnSave": true,
    "[solidity]": {
        "editor.defaultFormatter": "JuanBlanco.solidity"
    },
    "solidity.formatter": "forge",
    "solidity.compileUsingRemoteVersion": "v0.8.20",
    "solidity.remappings": [
        "@openzeppelin/=project/contracts/lib/openzeppelin-contracts/"
    ],
    "deno.enablePaths": [
        "apps/supabase/functions"
    ],
    "deno.lint": true,
    "deno.unstable": true,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}